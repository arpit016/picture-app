<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Account </h1>
      <p>Sign Up for the pro account for $10/month and upload and create unlimited projects.</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign Up for free and upload unlimited photos with one projects.</p>
    <% end %>
  </div>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-primary">
    <div class="panel-heading">Sign up</div>
    <div class="well">
      <div class="panel-body">
        <% if params[:plan] == '1' %>
          <%= render 'basic_form' %>
        <% else %>
          <%= render 'pro_form' %>
        <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
</div>
